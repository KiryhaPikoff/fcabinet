%h1
  .header My documents:

- if @docs.empty?
  %div
    .create-doc-cont
      = link_to "Create Doc", new_doc_path, class: 'create-doc-btn'
- else
  %table{ :id => 'documents-table' }
    - @docs.each do |doc|
      %tr
        %td
          %h2= link_to doc.title, doc
          %p= time_ago_in_words(doc.created_at)
          %p= truncate(doc.content, length:50)